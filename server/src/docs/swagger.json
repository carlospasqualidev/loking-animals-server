{
  "openapi": "3.0.0",
  "info": {
    "title": "API Sul Óxidos",
    "description": "Documentação API Sul Óxidos",
    "version": "1.0.0",
    "contact": {
      "email": "produto@adalovelace.com.br",
      "name": "Ada Lovelace"
    }
  },
  "servers": [
    {
      "description": "Local Development",
      "url": "http://localhost:8080/api"
    },
    {
      "description": "Sandbox",
      "url": "https://suloxidos-sandbox.herokuapp.com/api-docs"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "responses": {
      "ServerMessage": {
        "description": "Mensagem de erro padrão do backend.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "ServerMessage": {
                  "properties": {
                    "statusCode": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "paths": {
    "/backoffice/auth/login": {
      "post": {
        "tags": ["Backoffice | Auth"],
        "summary": "Login do usuário no backoffice.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "default": "admin@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "default": 123123123
                  }
                }
              }
            }
          }
        },

        "responses": {
          "200": {
            "description": "Retorna as informações do usuário e um token válido.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        },
                        "image": {
                          "type": "string"
                        },
                        "role": {
                          "type": "string"
                        }
                      }
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    },

    "/backoffice/users/list": {
      "get": {
        "tags": ["Backoffice | Users"],
        "summary": "Lista todos os usuarios",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "page",
            "example": "1",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "search",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],

        "responses": {
          "200": {
            "description": "Retorna os usuarios encontrados.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "image": {
                        "type": "string"
                      },
                      "role": {
                        "type": "string"
                      },
                      "isBlocked": {
                        "type": "boolean"
                      },
                      "updatedAt": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "createdAt": {
                        "type": "string",
                        "format": "date-time"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    },

    "/backoffice/users/edit": {
      "put": {
        "tags": ["Backoffice | Users"],
        "summary": "Edita as informações do usuário",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userId": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string",
                    "default": "Carlos Pasquali"
                  },
                  "email": {
                    "type": "string",
                    "default": "carlosdpasqualip@hotmail.com"
                  },
                  "image": {
                    "type": "string",
                    "default": "link"
                  },
                  "password": {
                    "type": "string",
                    "default": 123123123
                  },
                  "role": {
                    "type": "string",
                    "default": "Funcionario"
                  }
                }
              }
            }
          }
        },

        "responses": {
          "200": {
            "$ref": "#/components/responses/ServerMessage"
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    },

    "/backoffice/users/change/isBlocked": {
      "put": {
        "tags": ["Backoffice | Users"],
        "summary": "Altera o status do usuário (Bloqueado, Ativo).",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userId": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },

        "responses": {
          "200": {
            "$ref": "#/components/responses/ServerMessage"
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    },

    "/backoffice/users/change/isDeleted": {
      "put": {
        "tags": ["Backoffice | Users"],
        "summary": "Define o usuário como excluído, mas ainda mantem o mesmo na base de dados.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userId": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },

        "responses": {
          "200": {
            "$ref": "#/components/responses/ServerMessage"
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    },

    "/backoffice/animals/create": {
      "post": {
        "tags": ["Backoffice | Animals"],
        "summary": "Cria um novo animal.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "breedId": {
                    "type": "string"
                  },
                  "genderId": {
                    "type": "string"
                  },

                  "age": {
                    "type": "number",
                    "default": 100
                  },
                  "weight": {
                    "type": "number",
                    "default": 300
                  }
                }
              }
            }
          }
        },

        "responses": {
          "200": {
            "$ref": "#/components/responses/ServerMessage"
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    },
    "/backoffice/animals/create/action": {
      "post": {
        "tags": ["Backoffice | Animals"],
        "summary": "Cria uma nova ação para o animal.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "animalId": {
                    "type": "string"
                  },
                  "animalActionId": {
                    "type": "string"
                  },
                  "localId": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },

        "responses": {
          "200": {
            "$ref": "#/components/responses/ServerMessage"
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    },

    "/backoffice/animals/list": {
      "get": {
        "tags": ["Backoffice | Animals"],
        "summary": "Lista todos os usuarios",
        "security": [
          {
            "bearerAuth": []
          }
        ],

        "responses": {
          "200": {
            "description": "Retorna os animais encontrados.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "image": {
                        "type": "string"
                      },
                      "role": {
                        "type": "string"
                      },
                      "isBlocked": {
                        "type": "boolean"
                      },
                      "updatedAt": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "createdAt": {
                        "type": "string",
                        "format": "date-time"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    },

    "/backoffice/animals/dashboard": {
      "get": {
        "tags": ["Backoffice | Animals"],
        "summary": "Lista todas as ações dos animais.",
        "security": [
          {
            "bearerAuth": []
          }
        ],

        "responses": {
          "200": {
            "$ref": "#/components/responses/ServerMessage"
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    }
  }
}
