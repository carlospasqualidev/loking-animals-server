  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "responses": {
      "ServerMessage": {
        "description": "Mensagem de erro padrão do backend.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "ServerMessage": {
                  "properties": {
                    "statusCode": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "paths": {
    "/backoffice/auth/login": {
      "post": {
        "tags": ["Backoffice | Auth"],
        "summary": "Login do usuário no backoffice.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "default": "admin@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "default": 123123123
                  }
                }
              }
            }
          }
        },

        "responses": {
          "200": {
            "description": "Retorna as informações do usuário e um token válido.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        },
                        "image": {
                          "type": "string"
                        },
                        "role": {
                          "type": "string"
                        }
                      }
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    },

